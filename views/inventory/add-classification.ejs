<h1><%= title %></h1>

<%- messages() %>

<% if (locals.errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<p class="form-note"><strong>Note:</strong> Classification name cannot contain spaces or special characters.</p>

<form action="/inv/add-classification" method="post" id="addClassificationForm">
  <label for="classification_name">Classification Name:</label>
  <input 
    type="text" 
    id="classification_name" 
    name="classification_name" 
    required
    pattern="^[a-zA-Z0-9]+$"
    title="Classification name cannot contain spaces or special characters"
    placeholder="Enter classification name"
    <% if (locals.classification_name) { %>value="<%= classification_name %>"<% } %>
  >

  <button type="submit">Add Classification</button>
</form>

<p><a href="/inv/">Back to Management</a></p>
